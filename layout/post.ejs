<div class="dark-post">
    <div class="dark-postlist">
        <a href="<%- url_for(page.path) %>" >
            <% if (page.cover){ %>
                <div class="dark-post-cover">
                    <img src="<%- page.cover %>" alt="<%= page.title %>">
                    <h1><%= page.title %></h1>
                </div>
            <% } else{ %> 
                <div class="dark-post-cover">
                    <img src="<%- theme.postcover %>" alt="<%= page.title %>">
                    <h1><%= page.title %></h1>
                </div>
            <% } %> 
        </a>
        <div class="dark-postmeta">
            <a><span class="icon-date"></span>  <%- date(page.date, "YYYY年MM月DD日") %></a>
            <a><span class="icon-zishu"></span>  <%= wordcount(page.content) %> 字</a>
            <a><span class="icon-time"></span>  大概 <%= min2read(page.content, {cn: 250, en: 160}) %> 分钟</a>
        </div>
        <article class="dark-post-content">
            <%- page.content %>
        </article>
        <div class="dark-post-foot">
            <%- partial('_partial/comment') %>
        </div>
    </div>
</div>